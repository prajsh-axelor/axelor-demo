<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

  <grid name="project-grid" model="com.axelor.partner.db.Project" title="Project">
  	<field name="name" />
  	<field name="description" />
  	<field name="priority" />
  </grid>
  
  <form model="com.axelor.partner.db.Project" title="Projects" name="project-form">
  	<panel title="Overview">
  		<field name="name" />
  		<field name="priority" />
  		<field name="description" />
  		<field name="parent" />
  		<field name="members" widget="TagSelect" />
  		<field name="partnersInterested" widget="TagSelect" />
  	</panel>
  	<panel-tabs>
  		<panel-related field="projectTask" title="Tasks">
  			<field name="name" />
  			<field name="n"></field>
  		</panel-related>
  		<panel title="Notes">
  			<field name="notes" />
  		</panel>
  	</panel-tabs>
  </form>

</object-views>